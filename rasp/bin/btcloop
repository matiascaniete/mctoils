#!/usr/bin/env bash

frame() {
	echo "$1"
	sleep .5
}

animation() {
	frame "-"
	frame "--"
	frame "---"
	frame "----"
	frame "-----"
	frame "------"
	frame "-------"
	frame "--------"
}

while :
do
	animation
	BTC=$(btc)
	A="         "
	B=$(printf "%.1f" "$BTC")
	#BTC_ECHO=$(printf "%8s" "$BTC_ECHO")
	#echo "$BTC_ECHO"
	echo "${A:0:-${#B}}$B"
	sleep 5m
done;
